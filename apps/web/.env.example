# Database Seeding Environment Variables
# Copy this file to .env.local and update the values

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@yoursite.com
SUPER_ADMIN_NAME="Super Administrator"
SUPER_ADMIN_PASSWORD=your-secure-password
SUPER_ADMIN_FIREBASE_UID=your-firebase-uid-here

# Database Configuration
DB_CONNECTION_STRING=mongodb://localhost:27017/courselit
NODE_ENV=development

# Firebase Configuration (Required for authentication)
# Get these from your Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Optional: Custom domain and school name
DOMAIN_NAME=main
SCHOOL_NAME="My Learning Platform"
