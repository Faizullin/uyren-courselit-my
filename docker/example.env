# Docker Environment Variables
# Copy this file to .env.prod and update with your actual values
# Updated for Docker container networking

# Application Ports
WEB_PORT=3000
QUEUE_PORT=3001
REDIS_PORT=6379
MONGO_PORT=27017

REDIS_URL=redis://redis:6379

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=courselit

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production


# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Redis Configuration (Detailed)
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_DB=0

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# Cloudflare Turnstile
TURNSTILE_SITE_KEY=your_turnstile_site_key

# Queue Server Configuration
QUEUE_SERVER=http://localhost:3001
TRANSPORT_JWT_SECRET=your-transport-jwt-secret

# Firebase Configuration
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
NEXT_PUBLIC_FB_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FB_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FB_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FB_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FB_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FB_APP_ID=your_firebase_app_id

# Media Services
MEDIALIT_APIKEY=your_medialit_api_key
GIPHY_API_KEY=your_giphy_api_key
OPENAI_API_KEY=your_openai_api_key

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
SUPER_ADMIN_NAME=Super Administrator

# Authentication
AUTH_SECRET=your-auth-secret-key

# Redis Usage
USE_REDIS=true

# Pagination
ITEMS_PER_PAGE=10

# Queue Configuration
PORT=3001
HOST=localhost
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/courselit?authSource=admin

# Notification Settings
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_DEFAULT_PRIORITY=5

# Queue Cleanup
QUEUE_CLEANUP_COMPLETED=100
QUEUE_CLEANUP_FAILED=50

# Docker Configuration
IMAGE_TAG=latest
DOCKER_USERNAME=your-dockerhub-username
DOCKER_IMAGE_NAME=your-app-name
